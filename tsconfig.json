{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": ["es2018", "dom", "ES2022.Object"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@services/*": ["src/services/*"]
    },
    "rootDir": "src",
    "outDir": "lib"
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": ["src/**/*"]
  // "exclude": [ "src/servers/**/*", "src/perf-tests/*", "src/cli/**/*" ]
}
